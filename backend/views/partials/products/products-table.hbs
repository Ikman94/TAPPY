{{#each products class="order"}}
<table class="table bg-white rounded">
    <tbody>
        <tr class="mb-4">
            <th scope="col" class="check-box-width "><input type="checkbox" class=""></th>
            <th scope="row" class="border-left border-light  th-img-border"><small class=" "> {{this.name}} </small></th>
            <td class="border-left border-light  box-width"><small class="text-secondary  "> {{this.sku}} </small></td>
            <td class="border-left border-light  box-width"><small class=" font-weight-bold  "> ₦{{this.price}} </small></td>
            <td class="border-left border-light text-secondary  box-width"><small class=" "> {{this.countInStock}} </small>
            <th scope="row" class="border-left border-light  category-width"><small class=" "> {{this.category}} </small></th>
            <td class="border-left border-light  box-width"><small class=" "> 2 stars </td>
